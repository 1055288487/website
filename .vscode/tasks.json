{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks": [
        {
            "isBuildCommand": true,
            "taskName": "tsc",
            "command": "tsc",
            "isShellCommand": true,
            "args": [
                "-w",
                "-p",
                "."
            ],
            "showOutput": "silent",
            "isBackground": true,
            "problemMatcher": "$tsc-watch"
        },
        {
            "taskName": "lint",
            "command": "tslint",
            "args": [
                "-c",
                "tslint.json",
                "-p",
                ".",
                "-t",
                "codeFrame",
                "--type-check"
            ],
            "isShellCommand": true,
            "showOutput": "silent",
            "isBackground": true,
            "problemMatcher": [
                // "$tslint5"
            ]
        }
    ]
}
//"lint": "tslint -c tslint.json -p . -t codeFrame --type-check"